{
	"$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
	"root": true,
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"defaultBranch": "main",
		"useIgnoreFile": true
	},
	"files": {
		"ignoreUnknown": true
	},
	"linter": {
		"enabled": true,
		"domains": {
			"project": "recommended"
		}
	},
	"formatter": {
		"enabled": true
	},
	"overrides": [
		{
			"includes": ["**/packages/api/**"],
			"linter": {
				"enabled": false
			}
		}
	]
}
